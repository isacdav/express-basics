extends ../layouts/head.pug

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/auth.css")

block content
  main
    form.login-form(action="/new-password", method="POST")
      if errorMessage != null
        div.flash-message.flash-message--error= errorMessage
      input(type="hidden", name="_csrf", value=csrfToken)
      input(type="hidden", name="userId", value=userId)
      input(type="hidden", name="token", value=token)
      div.form-control
        label(for="password") Password
        input#password(type="password", name="password")
      div.form-control
        label(for="confirmPassword") Confirm Password
        input#confirmPassword(type="password", name="confirmPassword")
      button.btn(type="submit") Update password
