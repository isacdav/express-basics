extends ../layouts/head.pug

block styles
  link(rel="stylesheet", href="/css/orders.css")

block content
  main
    if orders.length === 0
      h1 There are no orders!
    else
      ul.orders
        each order in orders
          li.orders__item
            h3= 'Order #' + order._id
            ul.orders__products
              each product in order.items
                li.orders__products-item= product.title + ' (' + product.quantity + ') $' + product.price